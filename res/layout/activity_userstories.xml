<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/library_openbook"
    >
    
    <LinearLayout
        android:id="@+id/userstories_container_main"
        android:layout_width="630dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="90dp"
        android:layout_toRightOf="@+id/userstories_left"
        android:orientation="vertical"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/userstories_img_story"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_weight="2.07"
            android:contentDescription="@string/img_story"
            android:paddingBottom="35dp"
            android:paddingTop="50dp"
            android:scaleType="fitXY"           
            android:src="@drawable/library_preview_default"
            android:onClick="clicked_selectedStory" 
           />
			
        <TextView
            android:id="@+id/userstories_txt_storytitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.3"
            android:background="@drawable/library_title"
            android:gravity="center"
            android:text="@string/story_title"
            android:textAlignment="center"
            android:onClick="clicked_selectedStory"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userstories_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="50dp"
        android:weightSum="3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/userstories_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userstories_btn_addstory"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/button_back"
                android:onClick="clicked_btnBack"
                android:src="@drawable/general_back_button_selector" />

            <ImageView
                android:id="@+id/userstories_btn_addstory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/button_newpicture"
                android:onClick="clicked_btnAdd"
                android:src="@drawable/library_addstory_button_selector" />

            <ListView
                android:id="@+id/userstories_titles"
                android:layout_width="299dp"
                android:layout_height="514dp"
                android:layout_above="@+id/userstories_btn_addstory"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/userstories_btn_back" >

            </ListView>

        </RelativeLayout>
	    
    </LinearLayout>

</RelativeLayout>