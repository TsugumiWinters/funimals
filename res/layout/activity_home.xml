<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_background"
    android:orientation="vertical"
    android:weightSum="7" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_btn_sound"
            android:layout_width="@dimen/button_square"
            android:layout_height="@dimen/button_square"
            android:layout_margin="5dp"
            android:contentDescription="@string/button_sound_on"
            android:onClick="clicked_btnSound"
            android:scaleType="fitXY"
            android:src="@drawable/general_soundon" />

        <ImageView
            android:id="@+id/home_btn_info"
            android:layout_width="@dimen/button_square"
            android:layout_height="@dimen/button_square"
            android:layout_margin="5dp"
            android:contentDescription="@string/button_info"
            android:onClick="clicked_btnInfo"
            android:scaleType="fitXY"
            android:src="@drawable/general_info" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/general_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/home_linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3" >

            <ImageView
                android:id="@+id/home_btn_newpicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/button_newpicture"
                android:onClick="clicked_btnNewPicture"
                android:src="@drawable/general_newpicture" />

            <ImageView
                android:id="@+id/home_btn_viewlibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/button_viewlibrary"
                android:onClick="clicked_btnViewLibrary"
                android:src="@drawable/general_viewlibrary" />

            <ImageView
                android:id="@+id/home_btn_seetutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/button_seetutorial"
                android:onClick="clicked_btnSeeTutorial"
                android:src="@drawable/general_seetutorial" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/home_usercanvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/home_linearLayout1" >
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>