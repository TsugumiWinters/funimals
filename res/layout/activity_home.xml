<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_background" >

    <LinearLayout
        android:id="@+id/home_linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_btn_sound"
            android:layout_width="@dimen/button_square"
            android:layout_height="@dimen/button_square"
            android:layout_margin="5dp"
            android:contentDescription="@string/button_sound_on"
            android:onClick="clicked_btnSound"
            android:scaleType="fitXY"
            android:src="@drawable/general_soundon" />

        <ImageView
            android:id="@+id/home_btn_info"
            android:layout_width="@dimen/button_square"
            android:layout_height="@dimen/button_square"
            android:layout_margin="5dp"
            android:contentDescription="@string/button_info"
            android:onClick="clicked_btnInfo"
            android:scaleType="fitXY"
            android:src="@drawable/general_info_button_selector" />
    </LinearLayout>

    <ImageView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/home_linearLayout1"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/general_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_title"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/home_linearLayout2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="3" >

            <ImageView
                android:id="@+id/home_btn_newpicture"
                android:layout_width="@dimen/buttonhome_width"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:contentDescription="@string/button_newpicture"
                android:onClick="clicked_btnNewPicture"
                android:scaleType="centerInside"
                android:src="@drawable/general_newpicture_button_selector" />

            <ImageView
                android:id="@+id/home_btn_viewlibrary"
                android:layout_width="@dimen/buttonhome_width"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:contentDescription="@string/button_viewlibrary"
                android:onClick="clicked_btnViewLibrary"
                android:scaleType="centerInside"
                android:src="@drawable/general_viewlibrary_button_selector" />

            <ImageView
                android:id="@+id/home_btn_seetutorial"
                android:layout_width="@dimen/buttonhome_width"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:contentDescription="@string/button_seetutorial"
                android:onClick="clicked_btnSeeTutorial"
                android:scaleType="centerInside"
                android:src="@drawable/general_seetutorial_button_selector" />
        </LinearLayout>
		        
        <FrameLayout
            android:id="@+id/home_usercanvas"
            android:minWidth="200dp"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>