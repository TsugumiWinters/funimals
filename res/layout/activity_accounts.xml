<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/general_background" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="30dp"
        android:src="@drawable/general_accountselect"
        android:contentDescription="@string/account_selection" 
        android:id="@+id/general_accountselect" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/general_accountselect" >

        <ImageView
            android:id="@+id/add_account"
            android:layout_width="@dimen/accountimage_width"
            android:layout_height="@dimen/accountimage_height"
			android:layout_marginTop="90dp"
			android:layout_marginLeft="50dp"
			android:scaleType="fitXY"
            android:contentDescription="@string/button_addaccount"
            android:onClick="clicked_addAccount"
            android:src="@drawable/general_addaccount_button_selector" />

        <com.devsmart.android.ui.HorizontalListView
            android:id="@+id/accounts_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
             >
        </com.devsmart.android.ui.HorizontalListView>
    </LinearLayout>

</RelativeLayout>
