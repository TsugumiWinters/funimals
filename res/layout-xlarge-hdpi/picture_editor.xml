<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    
    <ImageView
        android:id="@+id/pe_home_button"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pe_home_button">
    </ImageView>
    
    <ImageView
        android:id="@+id/pe_library_button"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pe_library_button"
         android:layout_toRightOf="@+id/pe_home_button"/>
    
    <ImageView
        android:id="@+id/pe_restart_button"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pe_restart_button"
         android:layout_toRightOf="@+id/pe_library_button"/>
    
    <ImageView
        android:id="@+id/pe_createstory_button"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pe_createstory_button_disabled"
         android:layout_toRightOf="@+id/pe_restart_button"/>
    
    <AbsoluteLayout
        android:id="@+id/pe_bg"
        android:contentDescription="bg_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bedroom"
         android:layout_below="@+id/pe_home_button">
    </AbsoluteLayout>
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      	android:id="@+id/pe_bgTitleLayout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
         android:layout_below="@+id/pe_bg" >
    
    <ImageView
        android:id="@+id/pe_left_button"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pe_left_button"/>
    
    <TextView
        android:id="@+id/pe_bgtitle"
        android:contentDescription="@string/description"
        android:text="Bedroom"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:fontFamily="Georgia"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pe_bgtitle_bg"
         android:layout_toRightOf="@+id/pe_left_button"/>
    
    <ImageView
        android:id="@+id/pe_right_button"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pe_right_button"
         android:layout_toRightOf="@+id/pe_bgtitle"/>
    
	</RelativeLayout>    
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      	android:id="@+id/pe_stickersLayout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/pe_createstory_button" >
    
	     <ImageView
	        android:id="@+id/pe_adults_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_adults_button"/>
	         
	     <ImageView
	        android:id="@+id/pe_kids_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_kids_button"
	         android:layout_toRightOf="@+id/pe_adults_button"/>
	     
	     <ImageView
	        android:id="@+id/pe_things_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_things_button"
	         android:layout_toRightOf="@+id/pe_kids_button"/>
	     
	         
	     <ImageView
	        android:id="@+id/pe_stickers_bg"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_adults_bg"
	         android:layout_below="@+id/pe_adults_button"/>
	     
	     <GridView
		    android:id="@+id/gridView1"
	        android:contentDescription="@string/pe_gridviewdescription"
		    android:numColumns="2"
		    android:padding="40dip"
		    android:layout_gravity="center_horizontal"
		    android:columnWidth="30dp"
   	 		android:listSelector="@android:color/transparent"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	         android:layout_below="@+id/pe_adults_button" >
	 
		</GridView>
     
     </RelativeLayout>
     
    <TextView
        android:id="@+id/pe_storytitle"
        android:contentDescription="@string/description"  
        android:text="Title"
        android:textSize="37sp"
        android:textColor="#FFFFFF"
        android:fontFamily="Georgia"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pe_storytitle_bg"
        android:layout_below="@+id/pe_bg"
        android:visibility="invisible" />
    
     <ImageView
        android:id="@+id/pe_editstory_button"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pe_editstory_button"
        android:layout_toRightOf="@+id/pe_restart_button"
        android:visibility="invisible" />
     
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      	android:id="@+id/pe_storyLayout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="invisible"
	    android:layout_toRightOf="@+id/pe_editstory_button" >
    
         <ImageView
	        android:id="@+id/pe_dictionary_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_dictionary_button"/>
         
         <ImageView
	        android:id="@+id/pe_retrystory_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_retrystory_button"
	        android:layout_toRightOf="@+id/pe_dictionary_button"/>
         
         <ImageView
	        android:id="@+id/pe_savestory_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_savestory_button"
	        android:layout_toRightOf="@+id/pe_retrystory_button"/>
         
         <EditText
	        android:id="@+id/pe_searchbar"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="30dp"
	        android:background="@drawable/pe_searchbar"
	        android:layout_toRightOf="@+id/pe_dictionary_button"
        	android:visibility="invisible"/>
         
         <ImageView
	        android:id="@+id/pe_searchdictionary_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_searchdictionary_button"
	        android:layout_toRightOf="@+id/pe_dictionary_button"
        	android:visibility="invisible"/>
         
         <ImageView
	        android:id="@+id/pe_story_bg"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/pe_story_bg"
	        android:layout_below="@+id/pe_savestory_button"	     
	     	android:visibility="invisible"/>
         
         <TextView
	        android:id="@+id/pe_story"
	        android:scrollbars = "vertical"
	        android:text="Story"
	        android:fontFamily="Georgia"
	        android:textSize="35sp"
	        android:lineSpacingExtra="10dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:paddingTop="40dp"
	        android:paddingBottom="40dp"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/pe_story_bg"
	        android:layout_below="@+id/pe_savestory_button"/>	     
	     
         <ListView
	        android:id="@+id/pe_dictionary_list"
	        android:fontFamily="Georgia"
	        android:textSize="35sp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:paddingTop="20dp"
	        android:paddingBottom="20dp"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/pe_savestory_button"
	        android:layout_above="@+id/pe_pageLeft_button"
        	android:visibility="invisible"/>
         
       
         <ImageView
	        android:id="@+id/pe_pageLeft_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_left_button_disabled"
	        android:layout_below="@+id/pe_story_bg"/>
         
         <TextView
	        android:id="@+id/pe_page"
	        android:contentDescription="@string/description"
	        android:text="Page 1"
	        android:textSize="37sp"
	        android:textColor="#FFFFFF"
	        android:fontFamily="Georgia"
	        android:gravity="center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/pe_page_bg"
	        android:layout_below="@+id/pe_story_bg"
	    	android:layout_toRightOf="@+id/pe_pageLeft_button"/>
         
		 <ImageView
	        android:id="@+id/pe_pageRight_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_right_button_disabled"
	        android:layout_below="@+id/pe_story_bg"
	    	android:layout_toRightOf="@+id/pe_page"/>
         
		 <ImageView
	        android:id="@+id/pe_closedictionary_button"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pe_closedictionary_button"
	        android:layout_below="@+id/pe_story_bg"
        	android:visibility="invisible"/>
         
		  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      	android:id="@+id/pe_definitionLayout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="invisible"
	    android:background="@drawable/pe_story_bg"
	        android:layout_below="@+id/pe_savestory_button"
	        android:layout_above="@+id/pe_pageLeft_button" >    
            
         <TextView
	        android:id="@+id/pe_word"
	        android:text="Word"
	        android:fontFamily="Georgia"
	        android:textSize="35sp"
	        android:paddingTop="10dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
         
         <TextView
	        android:id="@+id/pe_partofspeech"
	        android:text="PartOfSpeech"
	        android:fontFamily="Georgia"
	        android:textSize="20sp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/pe_word"/>
         
         <TextView
	        android:id="@+id/pe_definition"
	        android:scrollbars = "vertical"
	        android:text="Definition"
	        android:fontFamily="Georgia"
	        android:textSize="25sp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:paddingTop="20dp"
	        android:paddingBottom="40dp"
	        android:contentDescription="@string/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/pe_partofspeech"/>
         </RelativeLayout>
         
		 
		 
     </RelativeLayout>
    
      <ImageView
        android:id="@+id/tutorial_home"
        android:visibility="invisible"
        android:onClick="tutorialNext"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_home"
         android:layout_below="@+id/pe_home_button"/>
      
     <ImageView
        android:id="@+id/tutorial_library"
        android:onClick="tutorialNext"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_library"
         android:visibility="invisible"
         android:layout_below="@+id/pe_home_button"
         android:layout_toRightOf="@+id/pe_home_button"/>
     
     <ImageView
        android:id="@+id/tutorial_delete"
        android:onClick="tutorialNext"
        android:contentDescription="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_delete"
         android:visibility="invisible"
         android:layout_below="@+id/pe_home_button"
         android:layout_toRightOf="@+id/pe_library_button"/>

     <ImageView
         android:id="@+id/tutorial_right_bg"
         android:onClick="tutorialNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/pe_restart_button"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_right_bg"
         android:visibility="invisible"
         android:layout_alignBottom="@+id/pe_bg" />

     <ImageView
         android:id="@+id/tutorial_left_bg"
         android:onClick="tutorialNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_left_bg"
         android:visibility="invisible"
         android:layout_alignBottom="@+id/pe_bg" />
     
     <ImageView
         android:id="@+id/tutorial_requirements"
         android:onClick="tutorialNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_requirements"
         android:visibility="invisible"
         android:layout_alignTop="@+id/pe_bg"
         android:layout_alignRight="@+id/pe_bg" />

     <ImageView
         android:id="@+id/tutorial_kids_tab"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/tutorial_delete"
         android:layout_alignLeft="@+id/pe_stickersLayout"
         android:layout_marginBottom="17dp"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_kids_tab"
         android:visibility="invisible" />
     
        <ImageView
         android:id="@+id/tutorial_things_tab"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/tutorial_delete"
         android:layout_alignLeft="@+id/pe_stickersLayout"
         android:layout_marginBottom="17dp"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_things_tab"
         android:visibility="invisible" />

       <ImageView
         android:id="@+id/tutorial_stickers_hold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_stickers_hold"
         android:visibility="invisible"
         android:layout_alignTop="@+id/pe_bg"
         android:layout_alignRight="@+id/pe_bg" />
        
         <ImageView
         android:id="@+id/tutorial_create_story"
         android:onClick="tutorialNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_create_story"
         android:visibility="invisible"
         android:layout_alignTop="@+id/pe_bg"
         android:layout_toRightOf="@+id/pe_restart_button" />
         
         <ImageView
         android:id="@+id/tutorial_skip"
         android:onClick="tutorialSkip"
         android:visibility="invisible"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:contentDescription="@string/description"
         android:src="@drawable/tutorial_skip"
         android:layout_alignBottom="@+id/pe_stickersLayout"
         android:layout_alignRight="@+id/pe_stickersLayout" />
 </RelativeLayout>